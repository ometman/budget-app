<header class="auth">
  <div class="menu-title-search">
  <%= link_to root_path do %>
    <span class="material-symbols-outlined">
      arrow_back
    </span>
  <% end %>
  <div class="header-title">
    <h1>REGISTER</h1>
    <% unless user_signed_in? %>
        <p class="welcome">Welcome!! Register to use</p>
    <% end %>
    <% if user_signed_in? %>
      <p>Hello, <%= current_user.name %>!</p>
      <div class="header-btns">
          <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'header-btn' %> or
          <%= button_to 'Return', user_categories_path(current_user), method: :get, class: 'header-btn' %>
      </div>
    else
      <%= button_to 'Login', new_user_session_path, method: :get, class: 'header-btn' %>
    <% end %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p> <!-- Display alerts -->
  </div>
  <div class="login-actions">
    <%= link_to "Next", 'javascript:void(0)', onclick: 'getElementById("signup-form").submit();', class: 'signup-btn-text' %>
  </div>
</header>
<main class="auth">
  <div class="signup-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: 'signup-form', class: 'signup-container-form' }) do |f| %>

      <div class="field">
        <%= f.label :name, class: "signup-label" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name here", class: 'signup-input name' %>
      </div>

      <div class="field">
        <%= f.label :email, class: "signup-label" %>
        <%= f.email_field :email, autocomplete: "email", autofocus: true, placeholder: "Email here", class: 'signup-input email' %>
      </div>

      <div class="field">
        <%= f.label :password, class: "signup-label" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password here' + (@minimum_password_length ? " (#{@minimum_password_length} characters minimum)" : ""), class: 'signup-input password' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "signup-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: 'signup-input password' %>
      </div>
      <%= f.submit class: 'signup-submit' %> <!-- Hidden submit button -->
    <% end %>      
  </div>
</main>


<main class="categories">
<h2 class="categories-heading"> Add a New Category </h2>
  <div class="categories-form-container">
    <%= form_with(model: @category, url: user_categories_path(current_user), local: true, html: { id: 'new-category-save-btn', class: 'new-category-form' }) do |form| %>
      <div class="field name-field">
        <%= form.label :name %> :
        <%= form.text_field :name %>
      </div>
    
      <div class="field icon-field">
        <%= form.label :icon %> :
        <%= form.file_field :icon %>
      </div>
    <% end %>
  </div>
  <%= link_to "Back to Categories", user_categories_path(current_user), class: "back-link" %>
<main>



